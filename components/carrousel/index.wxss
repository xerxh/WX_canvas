/* components/carrousel/index.wxss */
.swiperCarrousel {
  margin : 0;
  margin-top : 10px;
  /* background: red; */
}

.slide-image {
  width : 100%;
  height : 90%;
  border-radius: 10rpx;
  position: relative;
  transition: all 0.2 ease-in 0s;
}

image.active {
  transform: none;
}

image.quit {
  transform: scale(0.9);
}