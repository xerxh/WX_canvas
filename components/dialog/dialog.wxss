/* components/dialog.wxss */
.wx_dialog_container {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
}
.wx_dialog {
  position: fixed;
  z-index: 2000;
  width : 80%;
  /* height : 300rpx; */
  max-width : 600rpx;
  top : 50%;
  left : 50%;
  background: #ffff;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%,-50%);
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}
.wx_dialog_title {
  font-size : 18px;
  padding : 14px;
}
.wx_dialog_content {
  padding: 10px;
  min-height: 40px;
  font-size: 16px;
  line-height: 1.3;
  /* 在长单词或 URL 地址内部进行换行 */
  word-wrap: break-word;
  /* 允许在单词内换行 */
  word-break: break-all; 
}
.wx_dialog_footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 45px;
  font-size: 17px;
}
.wx_dialog_footer::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 1rpx;
  border-top: 1rpx solid #D5D5D6;
}
.wx_dialog_footer .btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  position:relative;
}
.wx_dialog_footer .btn:nth-of-type(1) {
  color: #353535;
}
.wx_dialog_footer .btn:nth-of-type(2) {
  color: #3cc51f;
}
.wx_dialog_footer .btn:nth-of-type(2)::after {
  content: "";
  position: absolute;
  left:0;
  top: 0;
  width: 1rpx;
  bottom: 0;
  border-left: 1rpx solid #D5D5D6;
  color : #D5D5D6;
  /* 可开启硬件加速 */
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}